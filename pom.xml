    <packaging>pom</packaging>

    <name>keta</name>
    <description>An etcd-like service backed by Apache Kafka</description>
    <url>https://github.com/rayokota/keta</url>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <developers>
        <developer>
            <name>Robert Yokota</name>
            <email>rayokota@gmail.com</email>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com:rayokota/keta.git</connection>
        <developerConnection>scm:git:git@github.com:rayokota/keta.git</developerConnection>
        <url>git@github.com:rayokota/keta.git</url>
        <tag>HEAD</tag>
