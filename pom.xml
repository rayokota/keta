        <tcnative.version>2.0.61.Final</tcnative.version>
        <vertx.version>4.4.5</vertx.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.kcache</groupId>
                <artifactId>keta-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.kcache</groupId>
